# Firebase Configuration (Required)
# Get these from your Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# AI Features (Optional - for AI-powered notes generation)
GEMINI_API_KEY=your_gemini_api_key

# OCR Features (Optional - for image text extraction)
OCR_API_KEY=your_ocr_api_key

# Mobile App API URL (Required for Capacitor mobile builds)
# Set this to your Vercel deployment URL for the mobile app to call APIs
# Example: https://your-app.vercel.app
NEXT_PUBLIC_API_URL=
